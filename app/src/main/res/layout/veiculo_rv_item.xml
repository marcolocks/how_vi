<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/idLLVeiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!--text view para a marca do veiculo-->
        <TextView
            android:id="@+id/idTVdeMarcaVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Marca do Veículo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!--text view para o modelo do veiculo-->
        <TextView
            android:id="@+id/idTVdeModeloVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Modelo do Veículo"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--text view para a placa do veiculo-->
        <TextView
            android:id="@+id/idTVnuPlacaVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Placa do Veículo"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
